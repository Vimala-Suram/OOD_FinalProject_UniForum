<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.northeastern.uniforum.forum.controller.CourseSelectionController"
            prefHeight="800.0" prefWidth="1400.0"
            style="-fx-background-color: #0B1416;">

    <stylesheets>
        <URL value="@../../../application/course-selection-dark.css" />
    </stylesheets>

    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" BorderPane.alignment="CENTER_LEFT" style="-fx-background-color: #1A1A1B; -fx-border-color: #343536; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <children>
                <Button fx:id="backButton" 
                        text="â† Back"
                        onAction="#handleBackToForum"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-cursor: hand; -fx-padding: 6 12;"/>
                <Label text="Course Selection"
                       style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;">
                </Label>
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>
            <children>

                <Label text="Select a department, then choose courses. Click checkboxes to select multiple courses. Your current selections are shown below. You can add or remove courses."
                       style="-fx-text-fill: #D7DADC; -fx-font-size: 14px;"
                       wrapText="true"/>

                <VBox spacing="8">
                    <children>
                        <Label text="Select Department"
                               style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                        <ComboBox fx:id="deptCombo"
                                  promptText="Choose Department"
                                  prefWidth="350"
                                  style="-fx-background-color: #2A2A2A; -fx-text-fill: white; -fx-border-color: #343536; -fx-border-radius: 4; -fx-prompt-text-fill: #818384;"/>
                    </children>
                </VBox>

                <VBox spacing="8">
                    <children>
                        <Label text="Available Courses:"
                               style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                        <ScrollPane fitToWidth="true" prefHeight="300" 
                                    vbarPolicy="AS_NEEDED" 
                                    hbarPolicy="NEVER"
                                    style="-fx-background-color: transparent; -fx-background: transparent;">
                            <content>
                                <ListView fx:id="courseListView"
                                          prefWidth="600"
                                          style="-fx-background-color: #0B1416; -fx-border-color: #343536; -fx-border-radius: 4; -fx-control-inner-background: #0B1416;"/>
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>

                <VBox spacing="8">
                    <children>
                        <Label text="Selected Courses:"
                               style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                        <Label fx:id="selectedCoursesLabel"
                               text="No courses selected"
                               style="-fx-text-fill: white; -fx-font-size: 12px; -fx-background-color: #0B1416; -fx-padding: 8; -fx-background-radius: 4; -fx-border-color: #343536; -fx-border-width: 1; -fx-border-radius: 4;"
                               wrapText="true"
                               prefWidth="600"/>
                    </children>
                </VBox>

            </children>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER_RIGHT">
            <padding>
                <Insets top="20" right="40" bottom="40" left="40"/>
            </padding>
            <children>
                <Button fx:id="nextBtn"
                        text="Continue"
                        style="-fx-background-color: #FF4500; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12 30; -fx-cursor: hand; -fx-background-radius: 20px;"
                        prefHeight="45"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>
