<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<HBox prefHeight="800.0" prefWidth="1400.0" 
      xmlns="http://javafx.com/fxml/1" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="edu.northeastern.uniforum.forum.controller.LoginController"
      style="-fx-background-color: #1a1a2e;">

    <AnchorPane prefWidth="550.0" style="-fx-background-color: #0B1416;">
        <VBox alignment="CENTER" spacing="30.0"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" 
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>

                <Label text="UF" style="-fx-font-size: 80px; -fx-font-weight: bold; -fx-text-fill: #FF4500; -fx-font-family: 'Arial Black', sans-serif;"/>

                <Label text="WELCOME TO" style="-fx-font-size: 16px; -fx-text-fill: #818384; -fx-font-weight: 500; -fx-letter-spacing: 2px;"/>

                <Label text="UNIFORUM" style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #D7DADC; -fx-letter-spacing: 1px;"/>

                <Label text="Your Academic Community" 
                       style="-fx-font-size: 16px; -fx-text-fill: #0079D3; -fx-font-weight: 600;"/>
            </children>
        </VBox>
    </AnchorPane>

    <AnchorPane prefWidth="850.0" maxWidth="Infinity" style="-fx-background-color: #1A1A1B;">

        <VBox alignment="TOP_CENTER" spacing="28.0" 
              AnchorPane.leftAnchor="120.0" AnchorPane.rightAnchor="120.0" AnchorPane.topAnchor="140.0">

            <VBox alignment="CENTER_LEFT" spacing="6.0">
                <Label text="Log In" 
                       style="-fx-font-size: 32px; -fx-font-weight: 600; -fx-text-fill: #D7DADC;"/>
                <Label text="By continuing, you agree to our User Agreement and Privacy Policy" 
                       style="-fx-font-size: 12px; -fx-text-fill: #818384;"/>
            </VBox>

            <VBox spacing="16.0" prefWidth="400.0">

                <VBox spacing="6.0">
                    <Label text="USERNAME" 
                           style="-fx-font-size: 11px; -fx-text-fill: #818384; -fx-font-weight: 600;"/>
                    <TextField fx:id="usernameField" 
                               promptText="Enter username"
                               prefHeight="44.0" 
                               styleClass="text-field-clean"/>
                </VBox>

                <VBox spacing="6.0">
                    <Label text="PASSWORD" 
                           style="-fx-font-size: 11px; -fx-text-fill: #818384; -fx-font-weight: 600;"/>
                    <PasswordField fx:id="passwordField" 
                                   promptText="Enter password"
                                   prefHeight="44.0" 
                                   styleClass="text-field-clean"/>
                    <HBox alignment="CENTER_LEFT">
                        <Button onAction="#handleForgotPasswordAction" 
                                text="Forgot password?" 
                                style="-fx-background-color: transparent; -fx-text-fill: #0079D3; -fx-font-size: 12px; -fx-padding: 4 0; -fx-cursor: hand; -fx-font-weight: 600; -fx-border-width: 0;"/>
                    </HBox>
                </VBox>

                <Button fx:id="loginButton" 
                        text="LOG IN" 
                        onAction="#handleLoginButtonAction" 
                        prefHeight="48.0" 
                        maxWidth="Infinity"
                        styleClass="button-primary"
                        style="-fx-background-color: #FF4500; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: 700; -fx-background-radius: 24px; -fx-cursor: hand;">
                    <VBox.margin>
                        <Insets top="8.0" />
                    </VBox.margin>
                </Button>

                <HBox alignment="CENTER" spacing="6.0">
                    <VBox.margin>
                        <Insets top="8.0" />
                    </VBox.margin>
                    <Label text="New to UniForum?" 
                           style="-fx-font-size: 13px; -fx-text-fill: #818384;"/>
                    <Button onAction="#handleRegisterLinkAction" 
                            text="Sign Up" 
                            style="-fx-background-color: transparent; -fx-font-size: 13px; -fx-text-fill: #0079D3; -fx-font-weight: 700; -fx-cursor: hand; -fx-border-width: 0;"/>
                </HBox>

                <Label fx:id="messageLabel" 
                       wrapText="true"
                       style="-fx-font-weight: 600; -fx-text-fill: #EA0027; -fx-font-size: 12px;"/>
            </VBox>

        </VBox>
    </AnchorPane>
</HBox>