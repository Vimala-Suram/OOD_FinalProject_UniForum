<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="1400.0" style="-fx-background-color: #0B1416;" 
            xmlns="http://javafx.com/fxml/1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="edu.northeastern.uniforum.forum.controller.SettingsController">

    <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #1A1A1B; -fx-padding: 15 30; -fx-border-color: #343536; -fx-border-width: 0 0 1 0;" 
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" prefHeight="70.0">
        <children>

            <Button onAction="#handleBackAction" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 18px; -fx-cursor: hand;" 
                   text="â† Back" />

            <HBox maxWidth="Infinity" HBox.hgrow="ALWAYS" />

            <Label fx:id="usernameLabel" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white; -fx-cursor: hand; -fx-padding: 6 12; -fx-background-color: transparent; -fx-background-radius: 20; -fx-border-color: #FF4500; -fx-border-width: 1; -fx-border-radius: 20;" 
                   onMouseClicked="#onUsernameClicked" />
        </children>
    </HBox>

    <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" 
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="70.0" style="-fx-padding: 20;">

        <ScrollPane fitToWidth="true" pannable="true" style="-fx-background-color: transparent; -fx-border-color: transparent;" 
                   HBox.hgrow="ALWAYS">
            <content>

                <VBox fx:id="mainContentArea" spacing="30.0" maxWidth="Infinity"
                      style="-fx-background-color: #1A1A1B; -fx-background-radius: 4px; -fx-padding: 40;" 
                      alignment="TOP_LEFT">
            <children>

                <VBox spacing="5.0">
                    <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;" 
                          text="Account Settings" />
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #818384;" 
                          text="Manage your account information and preferences" />
                </VBox>

                <VBox spacing="20.0">
                    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" 
                          text="Profile Information" />

                    <VBox spacing="15.0">
                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="Username" />
                            <TextField fx:id="usernameField" prefHeight="40.0" 
                                     prefWidth="500.0" 
                                     style="-fx-background-color: #0B1416; -fx-text-fill: white; -fx-border-color: #343536; -fx-border-width: 1; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 10; -fx-font-size: 14px;" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="Email" />
                            <TextField fx:id="emailField" prefHeight="40.0" 
                                     prefWidth="500.0" 
                                     style="-fx-background-color: #0B1416; -fx-text-fill: white; -fx-border-color: #343536; -fx-border-width: 1; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 10; -fx-font-size: 14px;" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="LinkedIn URL" />
                            <TextField fx:id="linkedinUrlField" prefHeight="40.0" 
                                     prefWidth="500.0" promptText="https://linkedin.com/in/yourprofile" 
                                     style="-fx-background-color: #0B1416; -fx-text-fill: white; -fx-border-color: #343536; -fx-border-width: 1; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 10; -fx-prompt-text-fill: #818384; -fx-font-size: 14px;" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="GitHub URL" />
                            <TextField fx:id="githubUrlField" prefHeight="40.0" 
                                     prefWidth="500.0" promptText="https://github.com/yourusername" 
                                     style="-fx-background-color: #0B1416; -fx-text-fill: white; -fx-border-color: #343536; -fx-border-width: 1; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 10; -fx-prompt-text-fill: #818384; -fx-font-size: 14px;" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="Department" />
                            <TextField fx:id="departmentField" prefHeight="40.0" 
                                     prefWidth="500.0" promptText="e.g., IS, CSYE, DAMG, TELE" 
                                     style="-fx-background-color: #0B1416; -fx-text-fill: white; -fx-border-color: #343536; -fx-border-width: 1; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 10; -fx-prompt-text-fill: #818384; -fx-font-size: 14px;" />
                        </VBox>
                    </VBox>
                </VBox>

                <VBox fx:id="securitySection" spacing="20.0">
                    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" 
                          text="Security" />

                    <VBox spacing="15.0">
                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="Current Password" />
                            <PasswordField fx:id="currentPasswordField" prefHeight="40.0" 
                                         prefWidth="500.0" 
                                         style="-fx-background-color: #0B1416; -fx-text-fill: white; -fx-border-color: #343536; -fx-border-width: 1; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 10; -fx-font-size: 14px;" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="New Password" />
                            <PasswordField fx:id="newPasswordField" prefHeight="40.0" 
                                         prefWidth="500.0" 
                                         style="-fx-background-color: #0B1416; -fx-text-fill: white; -fx-border-color: #343536; -fx-border-width: 1; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 10; -fx-font-size: 14px;" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="Confirm New Password" />
                            <PasswordField fx:id="confirmPasswordField" prefHeight="40.0" 
                                         prefWidth="500.0" 
                                         style="-fx-background-color: #0B1416; -fx-text-fill: white; -fx-border-color: #343536; -fx-border-width: 1; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 10; -fx-font-size: 14px;" />
                        </VBox>
                    </VBox>
                </VBox>

                <HBox spacing="15.0" fx:id="scheduleCallContainer">
                    <Button fx:id="scheduleCallButton" text="Schedule a Call" onAction="#handleScheduleCall" 
                           style="-fx-background-color: #FF4500; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 20px; -fx-padding: 12 30; -fx-cursor: hand;" 
                           prefHeight="45.0" visible="false" managed="false" />
                </HBox>

                <HBox fx:id="actionButtonsContainer" spacing="15.0">
                    <Button fx:id="saveButton" text="Save Changes" onAction="#handleSaveAction" 
                           style="-fx-background-color: #FF4500; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 20px; -fx-padding: 12 30; -fx-cursor: hand;" 
                           prefHeight="45.0" />
                    <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancelAction" 
                           style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-color: #FF4500; -fx-border-width: 1px; -fx-border-radius: 20px; -fx-background-radius: 20px; -fx-padding: 12 30; -fx-cursor: hand;" 
                           prefHeight="45.0" />
                </HBox>

                <Label fx:id="messageLabel" style="-fx-font-weight: bold; -fx-text-fill: #EA0027;"/>

                </children>
                </VBox>
            </content>
        </ScrollPane>

    </HBox>

</AnchorPane>
